    "evaluation_methods": [
      {
        "name": "Completeness Validation",
        "description": "Iterate through each category and sub-category; check that all required scales have non-empty string mappings; flag incomplete entries."
      },
      {
        "name": "Consistency Alignment",
        "description": "For each category, verify logical alignment between mappings and principle; flag misalignments or forced fits."
      },
      {
        "name": "Isomorphism Scoring",
        "description": "Represent causal topology of each mapping as a graph; compute similarity scores (e.g., via graph edit distance) between graphs across scales; score >0.8 indicates strong isomorphism."
      },
      {
        "name": "Gap Flagging",
        "description": "Identify scales with weak or absent mappings; log for refinement in contradictions_ledger."
      },
      {
        "name": "Contradiction Detection",
        "description": "Scan for inconsistencies (e.g., mappings contradicting principle); catalog in ledger with source, conflict, justification, scope, and branches."
      },
      {
        "name": "Fixed Point Check",
        "description": "Recursively apply evaluation methods to the module's output until no changes occur, confirming stability."
      }
    ]
  },
